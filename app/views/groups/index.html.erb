<div class="animate-fade-in">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h2 fw-bold">Grupos</h1>
      <p class="text-muted mb-0">Gestiona tus grupos</p>
    </div>

    <div class="d-flex gap-2">
      <!-- Botón crear -->
      <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#groupModal" onclick="openCreateModal()">
        <i class="bi bi-plus-lg me-2"></i>Agregar grupo
      </button>
    </div>
  </div>

  <!-- Groups List -->
  <div class="card bg-card border-secondary">
    <div class="card-header bg-transparent border-secondary">
      <h5 class="card-title mb-0">
        <i class="bi bi-people-fill text-primary me-2"></i>
        Tus grupos (<%= @groups&.count %>)
      </h5>
    </div>
    <div class="card-body">
      <% if @groups&.any? %>
        <div class="d-flex flex-column gap-2">
          <% @groups.each do |group| %>
            <div class="student-item d-flex align-items-center justify-content-between p-3 rounded">
              <div class="d-flex align-items-center gap-3">
                <div class="student-avatar">
                  <%= group.name.first.upcase %>
                </div>
                <span class="fw-medium"><%= group.name %></span>
              </div>

              <div class="d-flex gap-2">
                <%= link_to group_dashboard_path(group), class: "btn btn-primary" do %>
                  <i class="bi bi-gear-fill me-1"></i> Administrar
                <% end %>

                <!-- Botón Editar -->
                <button class="btn btn-sm btn-ghost" onclick="openEditModal('<%= group.id %>', '<%= j(group.name) %>')">
                  <i class="bi bi-pencil"></i>
                </button>

                <!-- ✅ Botón Eliminar - ABRE MODAL PERSONALIZADO -->
                <button class="btn btn-sm btn-ghost text-danger"
                        onclick="openDeleteModal('<%= group.id %>', '<%= j(group.name) %>')">
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5 text-muted">
          <i class="bi bi-people fs-1 d-block mb-3 opacity-50"></i>
          <p class="mb-1">No hay grupos registrados</p>
          <small>Comienza agregando tu primer grupo</small>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Create/Edit Modal -->
<div class="modal fade" id="groupModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-card border-secondary">
      <div class="modal-header border-secondary">
        <h5 class="modal-title" id="groupModalTitle">Nuevo grupo</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>

      <%= form_with url: groups_path, method: :post, id: "groupForm", local: true do |f| %>
        <div class="modal-body">
          <input type="hidden" name="_method" id="formMethod" value="post">

          <div class="mb-3">
            <label for="groupName" class="form-label">Nombre del grupo <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="groupName" name="group[name]"
                   placeholder="Nombre del grupo" required>
          </div>
        </div>
        <div class="modal-footer border-secondary">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary" id="groupSubmitBtn">Crear</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- MODAL DE CONFIRMACIÓN CORREGIDO - SIN PROBLEMAS DE CSRF -->
<div class="modal fade" id="deleteGroupModal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-card border-secondary">
      <div class="modal-header border-secondary">
        <h5 class="modal-title text-danger">
          <i class="bi bi-exclamation-triangle-fill me-2"></i>
          Eliminar grupo
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="text-center py-3">
          <i class="bi bi-trash text-danger" style="font-size: 3rem;"></i>
          <h5 class="mt-3">¿Estás seguro de eliminar este grupo?</h5>
          <p class="text-muted mb-1">
            Vas a eliminar "<span id="deleteGroupName" class="fw-bold"></span>"
          </p>
          <div class="alert alert-warning mt-3 mb-0" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            Esta acción eliminará TODOS los estudiantes, asistencias y sesiones asociadas a este grupo. Esta operación no se puede deshacer.
          </div>
        </div>
      </div>
      <div class="modal-footer border-secondary justify-content-center">
        <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
          <i class="bi bi-x-lg me-2"></i>Cancelar
        </button>

        <!-- ✅ FORMULARIO CORREGIDO - El action se setea con data attribute -->
        <%= form_with url: "",
                      method: :delete,
                      id: "deleteGroupForm",
                      local: true,
                      html: { data: { turbo: false } } do |f| %>
          <%= f.submit "Sí, eliminar grupo", class: "btn btn-danger px-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
    function openDeleteModal(id, name) {
        document.getElementById('deleteGroupName').textContent = name;

        // ✅ Obtener token fresco del meta tag
        const token = document.querySelector('meta[name="csrf-token"]').content;

        // ✅ Construir la URL correcta
        const url = '/groups/' + id;

        // ✅ Setear action y agregar token manualmente
        const form = document.getElementById('deleteGroupForm');
        form.action = url;

        // ✅ Agregar o actualizar el campo de authenticity_token
        let tokenInput = form.querySelector('input[name="authenticity_token"]');
        if (!tokenInput) {
            tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = 'authenticity_token';
            form.appendChild(tokenInput);
        }
        tokenInput.value = token;

        new bootstrap.Modal(document.getElementById('deleteGroupModal')).show();
    }
</script>